{
  "manifest_version": 3,
  "name": "Subscription Manager",
  "version": "2.0.1",
  "description": "Helps manage streaming service subscriptions by navigating to cancellation pages",

  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "contextMenus",
    "notifications",
    "alarms"
  ],

  "host_permissions": [
    "https://*.netflix.com/*",
    "https://*.hulu.com/*",
    "https://*.disney.com/*",
    "https://*.disneyplus.com/*",
    "https://*.hbomax.com/*",
    "https://*.max.com/*",
    "https://*.peacocktv.com/*",
    "https://*.paramountplus.com/*",
    "https://*.amazon.com/*",
    "https://*.primevideo.com/*",
    "https://*.apple.com/*",
    "https://*.spotify.com/*",
    "https://*.youtube.com/*"
  ],

  "background": {
    "service_worker": "background-v2.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://*.netflix.com/*",
        "https://*.hulu.com/*",
        "https://*.disney.com/*",
        "https://*.disneyplus.com/*",
        "https://*.hbomax.com/*",
        "https://*.max.com/*",
        "https://*.peacocktv.com/*",
        "https://*.paramountplus.com/*",
        "https://*.amazon.com/*",
        "https://*.primevideo.com/*",
        "https://*.apple.com/*",
        "https://*.spotify.com/*",
        "https://*.youtube.com/*"
      ],
      "js": ["content-debug.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup-enhanced.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "options_page": "options-enhanced.html"
}